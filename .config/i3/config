set $mod Mod1
set $Power ~/.config/i3/script/exit.sh

include ~/.config/i3/enable/*.conf

exec --no-startup-id "$HOME/.config/i3/script/custom_startup.sh"

exec --no-startup-id "$HOME/.config/i3/script/wallpaper_random.sh"

# # screen shot
bindsym $mod+Shift+s exec "$HOME/.config/i3/script/screenshot.sh"
#bindsym $mod+Ctrl+s exec "~/.config/i3/script/video_capture.sh"

# clipboard(primary) replace
bindsym $mod+x exec "~/.config/i3/script/primary_selection_replace.sh"

bindsym $mod+Shift+o exec "/usr/bin/arandr"
